import React, { useState, useEffect } from 'react';
import { 
  Plus, Truck, AlertTriangle, CheckCircle, Search, Trash2, 
  Clock, Package, FileSpreadsheet, Printer, User, X, Database, Settings, RefreshCw, Lock, Key 
} from 'lucide-react';

const ADMIN_PASSWORD = 'PEDROAMARAL';

export default function App() {
  // --- ESTADOS ---
  const [batches, setBatches] = useState([]);
  const [isLoading, setIsLoading] = useState(false);
  
  // Configuração do npoint.io
  const [dbId, setDbId] = useState(() => localStorage.getItem('logistica_npoint_id') || '8edbde1b2052893fd5ee');
  const [isConfigOpen, setIsConfigOpen] = useState(false);

  // Estados de Autenticação (Configurações)
  const [isAdminAuthenticated, setIsAdminAuthenticated] = useState(false);
  const [passwordInput, setPasswordInput] = useState('');
  const [passwordError, setPasswordError] = useState(false);

  // Estados de Formulário
  const [newBatchId, setNewBatchId] = useState('');
  const [batchType, setBatchType] = useState('LM'); // LM ou BRE
  
  // Estados de Filtro/Busca
  const [filter, setFilter] = useState('pending');
  const [searchTerm, setSearchTerm] = useState('');

  // Estados do Modal de Confirmação
  const [isConfirmModalOpen, setIsConfirmModalOpen] = useState(false);
  const [batchToDispatch, setBatchToDispatch] = useState(null);
  const [dispatcherName, setDispatcherName] = useState('');

  // --- FUNÇÕES DE BANCO DE DADOS (API npoint.io) ---
  
  const getApiUrl = () => `https://api.npoint.io/${dbId}`;

  // 1. Ler dados (GET)
  const fetchData = async () => {
    if (!dbId) return;
    try {
      const response = await fetch(getApiUrl());
      if (response.ok) {
        const data = await response.json();
        setBatches(Array.isArray(data) ? data : []);
      }
    } catch (error) {
      console.error("Erro ao buscar dados:", error);
    }
  };

  // 2. Salvar dados (POST)
  const saveData = async (newData) => {
    if (!dbId) return;
    setIsLoading(true);
    try {
      await fetch(getApiUrl(), {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(newData)
      });
      setBatches(newData);
    } catch (error) {
      console.error("Erro ao salvar:", error);
      alert("Erro de conexão ao salvar no npoint.");
    } finally {
      setIsLoading(false);
    }
  };

  // 3. Resetar Banco (Limpar Tudo)
  const handleResetDatabase = async () => {
    if (window.confirm("ATENÇÃO: Isso apagará TODOS os registros do banco de dados para começar do zero.\n\nTem certeza que deseja continuar?")) {
      await saveData([]); // Envia lista vazia
      alert("Banco de dados limpo com sucesso! Pode começar a utilizar.");
      closeConfig();
    }
  };

  // --- EFEITOS ---

  // Polling: Busca dados a cada 3 segundos
  useEffect(() => {
    if (dbId) {
      fetchData(); 
      const interval = setInterval(fetchData, 3000);
      return () => clearInterval(interval);
    }
  }, [dbId]);

  // --- FUNÇÕES DE CONFIGURAÇÃO E SENHA ---

  const openConfig = () => {
    setIsConfigOpen(true);
    setIsAdminAuthenticated(false); // Reseta auth ao abrir
    setPasswordInput('');
    setPasswordError(false);
  };

  const closeConfig = () => {
    setIsConfigOpen(false);
    setIsAdminAuthenticated(false);
    setPasswordInput('');
  };

  const handleLoginSubmit = (e) => {
    e.preventDefault();
    if (passwordInput === ADMIN_PASSWORD) {
      setIsAdminAuthenticated(true);
      setPasswordError(false);
    } else {
      setPasswordError(true);
      setPasswordInput('');
    }
  };

  const handleSaveConfig = (e) => {
    e.preventDefault();
    const id = e.target.elements.npointId.value.trim();
    if (id) {
      localStorage.setItem('logistica_npoint_id', id);
      setDbId(id);
      closeConfig();
      setTimeout(() => fetchData(), 500);
    }
  };

  // --- AÇÕES DO SISTEMA ---

  // 1. Criar Lote
  const handleAddBatch = async (e) => {
    e.preventDefault();
    if (!newBatchId.trim() || !dbId) return;

    try {
      const response = await fetch(getApiUrl());
      const currentBatches = Array.isArray(await response.json()) ? await response.json() : [];
      
      const newBatch = {
        id: Date.now().toString(),
        code: newBatchId.toUpperCase(),
        type: batchType,
        status: 'pending',
        createdAt: new Date().toISOString(),
        dispatchedAt: null,
        dispatchedBy: null
      };

      const updatedBatches = [newBatch, ...currentBatches];
      await saveData(updatedBatches);
      setNewBatchId('');
    } catch (err) {
      alert("Erro ao sincronizar. Tente novamente.");
    }
  };

  // 2. Confirmar Expedição
  const handleConfirmDispatch = async (e) => {
    e.preventDefault();
    if (!batchToDispatch || !dispatcherName.trim()) return;

    try {
      const response = await fetch(getApiUrl());
      const currentBatches = await response.json();

      const updatedBatches = currentBatches.map(b => {
        if (b.id === batchToDispatch.id) {
          return {
            ...b,
            status: 'dispatched',
            dispatchedAt: new Date().toISOString(),
            dispatchedBy: dispatcherName.toUpperCase()
          };
        }
        return b;
      });

      await saveData(updatedBatches);
      setIsConfirmModalOpen(false);
      setBatchToDispatch(null);
    } catch (err) {
      alert("Erro ao atualizar o lote.");
    }
  };

  // 3. Deletar Item Único
  const handleDelete = async (id) => {
    if (window.confirm('Excluir este registro?')) {
      try {
        const response = await fetch(getApiUrl());
        const currentBatches = await response.json();
        const updatedBatches = currentBatches.filter(b => b.id !== id);
        await saveData(updatedBatches);
      } catch (err) {
        alert("Erro ao deletar.");
      }
    }
  };

  // --- HELPERS E RENDERIZAÇÃO ---
  const exportToExcel = () => {
    let csvContent = "data:text/csv;charset=utf-8,ID;TIPO;STATUS;CRIADO EM;EXPEDIDO EM;RESPONSAVEL\n";
    filteredBatches.forEach(batch => {
      const row = [
        batch.code,
        batch.type,
        batch.status === 'pending' ? 'PENDENTE' : 'EXPEDIDO',
        new Date(batch.createdAt).toLocaleString('pt-BR'),
        batch.dispatchedAt ? new Date(batch.dispatchedAt).toLocaleString('pt-BR') : '-',
        batch.dispatchedBy || '-'
      ].join(";");
      csvContent += row + "\n";
    });
    const encodedUri = encodeURI(csvContent);
    const link = document.createElement("a");
    link.setAttribute("href", encodedUri);
    link.setAttribute("download", "relatorio_expedicao.csv");
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };

  const handlePrint = () => window.print();

  const pendingCount = batches.filter(b => b.status === 'pending').length;
  
  const filteredBatches = batches.filter(batch => {
    const matchesSearch = batch.code?.toLowerCase().includes(searchTerm.toLowerCase());
    const matchesFilter = filter === 'all' ? true : batch.status === filter;
    return matchesFilter && matchesSearch;
  });

  const formatDate = (isoString) => {
    if (!isoString) return '-';
    return new Date(isoString).toLocaleString('pt-BR', {
      day: '2-digit', month: '2-digit', hour: '2-digit', minute: '2-digit'
    });
  };

  return (
    <div className="min-h-screen bg-slate-100 font-sans text-slate-800 print:bg-white">
      
      {/* HEADER */}
      <header className="bg-blue-900 text-white p-4 shadow-lg sticky top-0 z-10 print:hidden">
        <div className="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
          <div className="flex items-center gap-2">
            <Truck className="w-8 h-8 text-yellow-400" />
            <div>
              <h1 className="text-xl font-bold">Logística Integrada</h1>
              <p className="text-xs text-blue-200 flex items-center gap-1">
                {isLoading ? 'Salvando...' : 'Conectado'}
                <span className={`w-2 h-2 rounded-full ${isLoading ? 'bg-yellow-400 animate-pulse' : 'bg-green-400'}`}></span>
              </p>
            </div>
          </div>
          
          <div className="flex items-center gap-4">
            <button 
              onClick={openConfig}
              className="p-2 hover:bg-blue-800 rounded-full transition-colors flex items-center gap-1"
              title="Configurações e Limpeza"
            >
              <Settings className="w-5 h-5 text-blue-200" />
            </button>
            <div className={`flex items-center gap-3 px-6 py-2 rounded-lg ${pendingCount > 0 ? 'bg-red-600' : 'bg-green-600'}`}>
              <span className="text-2xl font-bold leading-none">{pendingCount}</span>
              <span className="text-xs uppercase font-semibold">Pendentes</span>
            </div>
          </div>
        </div>
      </header>

      <main className="max-w-6xl mx-auto p-4 print:p-0 print:max-w-none">
        
        {/* MODAL DE CONFIGURAÇÃO (AGORA COM SENHA) */}
        {isConfigOpen && (
          <div className="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4 backdrop-blur-sm print:hidden">
            <div className="bg-white rounded-xl shadow-2xl w-full max-w-lg p-8">
              <div className="flex items-center justify-between mb-6 text-blue-900 border-b pb-4">
                <div className="flex items-center gap-3">
                  {isAdminAuthenticated ? <Settings className="w-7 h-7" /> : <Lock className="w-7 h-7" />}
                  <h2 className="text-2xl font-bold">
                    {isAdminAuthenticated ? 'Configurações' : 'Acesso Restrito'}
                  </h2>
                </div>
                <button onClick={closeConfig}><X className="text-slate-400 hover:text-slate-600" /></button>
              </div>
              
              {!isAdminAuthenticated ? (
                /* TELA DE LOGIN DO MODAL */
                <form onSubmit={handleLoginSubmit} className="space-y-4">
                  <div className="bg-blue-50 p-4 rounded-lg text-sm text-blue-800 mb-4 flex gap-3 items-center">
                    <Key className="w-5 h-5" />
                    <span>Esta área contém configurações sensíveis do banco de dados.</span>
                  </div>
                  
                  <div>
                    <label className="block text-sm font-bold text-slate-700 mb-2">Senha de Administrador</label>
                    <input 
                      type="password"
                      autoFocus
                      value={passwordInput}
                      onChange={(e) => setPasswordInput(e.target.value)}
                      placeholder="Digite a senha..."
                      className={`w-full p-4 border-2 rounded-lg font-mono text-center text-lg outline-none transition-all ${
                        passwordError 
                        ? 'border-red-500 focus:border-red-500 bg-red-50' 
                        : 'border-slate-300 focus:border-blue-500'
                      }`}
                    />
                    {passwordError && <p className="text-red-500 text-sm mt-1 font-bold text-center">Senha incorreta.</p>}
                  </div>
                  <button type="submit" className="w-full bg-blue-900 hover:bg-blue-800 text-white font-bold py-3 rounded-lg shadow-lg transition-colors">
                    ACESSAR
                  </button>
                </form>
              ) : (
                /* TELA DE CONFIGURAÇÃO (LIBERADA) */
                <>
                  <form onSubmit={handleSaveConfig} className="mb-8 animate-in fade-in slide-in-from-bottom-4 duration-300">
                    <label className="block text-sm font-bold text-slate-700 mb-2">ID do Banco de Dados (npoint.io)</label>
                    <div className="flex gap-2">
                      <input 
                        name="npointId"
                        defaultValue={dbId}
                        required
                        className="flex-1 p-3 border-2 border-slate-300 rounded-lg focus:border-blue-500 font-mono text-center bg-slate-50"
                      />
                      <button type="submit" className="bg-blue-600 hover:bg-blue-700 text-white font-bold px-4 rounded-lg">
                        Salvar
                      </button>
                    </div>
                  </form>

                  <div className="border-t pt-6 animate-in fade-in slide-in-from-bottom-8 duration-500">
                    <h3 className="text-red-600 font-bold mb-2 flex items-center gap-2">
                      <AlertTriangle className="w-5 h-5" /> Zona de Perigo
                    </h3>
                    <p className="text-sm text-slate-500 mb-4">
                      Deseja zerar o sistema? Esta ação é irreversível e apaga todo o histórico.
                    </p>
                    <button 
                      type="button"
                      onClick={handleResetDatabase}
                      className="w-full border-2 border-red-100 bg-red-50 hover:bg-red-100 text-red-700 font-bold py-3 rounded-lg flex items-center justify-center gap-2 transition-colors"
                    >
                      <Trash2 className="w-5 h-5" />
                      LIMPAR BANCO DE DADOS
                    </button>
                  </div>
                </>
              )}
            </div>
          </div>
        )}

        {/* EMISSÃO DE LOTE */}
        <div className="bg-white p-6 rounded-xl shadow-md mb-6 border-l-8 border-blue-600 print:hidden">
          <h2 className="text-lg font-semibold mb-4 flex items-center gap-2">
            <Package className="w-5 h-5 text-blue-600" />
            1. Emissão do Lote
          </h2>
          <form onSubmit={handleAddBatch} className="flex flex-col md:flex-row gap-4 items-end">
            <div className="flex-1 w-full">
              <label className="block text-sm font-bold text-slate-600 mb-1">Número do Lote/NF</label>
              <input
                type="text"
                value={newBatchId}
                onChange={(e) => setNewBatchId(e.target.value)}
                placeholder="Ex: 12345ABC"
                className="w-full p-3 border-2 border-slate-300 rounded-lg focus:border-blue-500 focus:outline-none text-lg uppercase"
              />
            </div>
            
            <div className="w-full md:w-48">
              <label className="block text-sm font-bold text-slate-600 mb-1">Tipo</label>
              <div className="flex bg-slate-100 p-1 rounded-lg border-2 border-slate-200">
                <button
                  type="button"
                  onClick={() => setBatchType('LM')}
                  className={`flex-1 py-2 text-sm font-bold rounded-md transition-colors ${batchType === 'LM' ? 'bg-blue-600 text-white shadow-sm' : 'text-slate-500 hover:bg-slate-200'}`}
                >
                  LM
                </button>
                <button
                  type="button"
                  onClick={() => setBatchType('BRE')}
                  className={`flex-1 py-2 text-sm font-bold rounded-md transition-colors ${batchType === 'BRE' ? 'bg-indigo-600 text-white shadow-sm' : 'text-slate-500 hover:bg-slate-200'}`}
                >
                  BRE
                </button>
              </div>
            </div>

            <button 
              type="submit"
              disabled={isLoading}
              className="w-full md:w-auto bg-blue-600 hover:bg-blue-700 disabled:bg-blue-400 text-white font-bold py-3.5 px-8 rounded-lg flex items-center justify-center gap-2 transition-colors"
            >
              {isLoading ? <RefreshCw className="w-5 h-5 animate-spin" /> : <Plus className="w-5 h-5" />}
              Emitir
            </button>
          </form>
        </div>

        {/* FERRAMENTAS E LISTA */}
        <div className="flex flex-col md:flex-row justify-between items-center mb-4 gap-4 print:hidden">
          <div className="flex bg-white p-1 rounded-lg shadow-sm">
             <button onClick={() => setFilter('pending')} className={`px-4 py-2 rounded-md text-sm font-bold transition-colors ${filter === 'pending' ? 'bg-red-100 text-red-700' : 'text-slate-500 hover:bg-slate-50'}`}>Pendentes</button>
             <button onClick={() => setFilter('dispatched')} className={`px-4 py-2 rounded-md text-sm font-bold transition-colors ${filter === 'dispatched' ? 'bg-green-100 text-green-700' : 'text-slate-500 hover:bg-slate-50'}`}>Expedidos</button>
             <button onClick={() => setFilter('all')} className={`px-4 py-2 rounded-md text-sm font-bold transition-colors ${filter === 'all' ? 'bg-blue-100 text-blue-700' : 'text-slate-500 hover:bg-slate-50'}`}>Todos</button>
          </div>

          <div className="flex gap-2">
            <button onClick={exportToExcel} className="flex items-center gap-2 bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-green-700 transition-colors">
              <FileSpreadsheet className="w-4 h-4" /> Excel
            </button>
            <button onClick={handlePrint} className="flex items-center gap-2 bg-slate-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-slate-700 transition-colors">
              <Printer className="w-4 h-4" /> PDF
            </button>
          </div>
          
          <div className="relative w-full md:w-auto">
             <Search className="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" />
             <input type="text" placeholder="Buscar..." value={searchTerm} onChange={(e) => setSearchTerm(e.target.value)} className="pl-9 pr-4 py-2 rounded-lg border border-slate-300 w-full focus:outline-none focus:border-blue-400" />
          </div>
        </div>

        {/* LISTAGEM */}
        <div className="space-y-3">
          {filteredBatches.length === 0 ? (
            <div className="text-center py-10 text-slate-400 border-2 border-dashed border-slate-300 rounded-xl">
              Nenhum registro encontrado. O sistema está pronto para uso.
            </div>
          ) : (
            filteredBatches.map(batch => (
              <div key={batch.id} className={`bg-white p-4 rounded-xl shadow-sm border-l-4 flex flex-col md:flex-row items-center justify-between gap-4 print:border border-slate-200 print:shadow-none ${batch.status === 'pending' ? 'border-l-red-500' : 'border-l-green-500 opacity-90'}`}>
                <div className="flex-1 w-full">
                  <div className="flex items-center gap-3 mb-2">
                    <span className="text-xl font-bold font-mono text-slate-700">#{batch.code}</span>
                    <span className={`text-xs px-2 py-1 rounded font-bold border ${batch.type === 'LM' ? 'bg-blue-50 text-blue-700 border-blue-200' : 'bg-indigo-50 text-indigo-700 border-indigo-200'}`}>{batch.type}</span>
                    
                    {batch.status === 'pending' ? (
                      <span className="bg-red-100 text-red-700 text-xs px-2 py-1 rounded-full font-bold uppercase print:hidden">Pendente</span>
                    ) : (
                      <span className="bg-green-100 text-green-700 text-xs px-2 py-1 rounded-full font-bold uppercase print:hidden">Expedido</span>
                    )}
                  </div>
                  
                  <div className="text-sm text-slate-500 flex flex-wrap gap-x-6 gap-y-1">
                    <span className="flex items-center gap-1"><Clock className="w-3 h-3" /> Emissão: {formatDate(batch.createdAt)}</span>
                    {batch.dispatchedAt && <span className="flex items-center gap-1 text-green-600 font-bold"><Truck className="w-3 h-3" /> Saída: {formatDate(batch.dispatchedAt)}</span>}
                    {batch.dispatchedBy && <span className="flex items-center gap-1 text-slate-600 font-bold"><User className="w-3 h-3" /> Resp: {batch.dispatchedBy}</span>}
                  </div>
                </div>

                <div className="print:hidden">
                  {batch.status === 'pending' ? (
                    <button onClick={() => { setBatchToDispatch(batch); setDispatcherName(''); setIsConfirmModalOpen(true); }} className="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg flex items-center gap-2 transition-colors">
                      <Truck className="w-5 h-5" /> EXPEDIR
                    </button>
                  ) : (
                    <button onClick={() => handleDelete(batch.id)} className="p-2 text-slate-300 hover:text-red-500 hover:bg-red-50 rounded-full transition-colors" title="Excluir"><Trash2 className="w-5 h-5" /></button>
                  )}
                </div>
              </div>
            ))
          )}
        </div>
      </main>

      {/* MODAL DE CONFIRMAÇÃO DE EXPEDIÇÃO */}
      {isConfirmModalOpen && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4 backdrop-blur-sm print:hidden">
          <div className="bg-white rounded-xl shadow-2xl w-full max-w-md p-6 animate-in fade-in zoom-in duration-200">
            <h3 className="text-xl font-bold text-slate-800 mb-4 flex gap-2"><Truck className="text-green-600"/> Confirmar Expedição</h3>
            <p className="mb-4 text-slate-600">Lote: <strong>{batchToDispatch?.code}</strong></p>
            <form onSubmit={handleConfirmDispatch}>
              <label className="block text-sm font-bold mb-2 text-slate-700">Quem está liberando? <span className="text-red-500">*</span></label>
              <input autoFocus required value={dispatcherName} onChange={(e) => setDispatcherName(e.target.value)} placeholder="SEU NOME" className="w-full p-3 border-2 border-slate-300 rounded-lg mb-6 uppercase focus:border-green-500 outline-none" />
              <div className="flex gap-3">
                <button type="button" onClick={() => setIsConfirmModalOpen(false)} className="flex-1 py-3 bg-slate-100 font-bold rounded-lg text-slate-600 hover:bg-slate-200 transition-colors">Cancelar</button>
                <button type="submit" disabled={isLoading} className="flex-1 py-3 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition-colors shadow-lg shadow-green-200">CONFIRMAR</button>
              </div>
            </form>
          </div>
        </div>
      )}

      <style>{`
        @media print {
          @page { margin: 2cm; }
          body { background: white; }
          .print\\:hidden { display: none !important; }
          .print\\:block { display: block !important; }
          .print\\:shadow-none { box-shadow: none !important; }
          .print\\:border { border: 1px solid #ddd !important; }
        }
      `}</style>
    </div>
  );
}
